{
    "name": "pyrun",
    "publisher": "jack-duo",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.90.3"
    },
    "activationEvents": [
        "onLanguage:python",
        "onCommand:extension.runPython",
        "onStartupFinished"
    ],
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "relative",
        "module",
        "python -m",
        "run"
    ],
    "icon": "icon.png",
    "main": "./ext.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Run Python -m",
            "properties": {
                "pyrun.pythonPath": {
                    "type": "string",
                    "default": "python3",
                    "description": "自定义python命令路径（如python3、python、/usr/bin/python3等），用于运行python -m。"
                },
                "pyrun.enableContextMenu": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否在右键菜单中显示运行按钮。"
                },
                "pyrun.enableEditorButton": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否在编辑器标题栏显示运行按钮。"
                },
                "pyrun.enableRunMenu": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否在编辑器顶部运行菜单显示运行按钮。"
                },
                "pyrun.saveBeforeRun": {
                    "type": "boolean",
                    "default": true,
                    "description": "运行前是否自动保存当前文件。"
                }
            }
        },
        "commands": [
            {
                "command": "extension.runPython",
                "title": "🐍 python -m",
                "when": "resourceLangId == python"
            }
        ],
        "keybindings": [
            {
                "command": "extension.runPython",
                "key": "cmd+1"
            },
            {
                "command": "extension.runPython",
                "key": "cmd+Enter"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.runPython",
                    "group": "navigation",
                    "title": "Run Python",
                    "when": "resourceLangId == python && config.pyrun.enableContextMenu"
                }
            ],
            "editor/title/context": [
                {
                    "command": "extension.runPython",
                    "group": "navigation",
                    "title": "Run Python",
                    "when": "resourceLangId == python && config.pyrun.enableEditorButton"
                }
            ],
            "editor/title/run": [
                {
                    "command": "extension.runPython",
                    "title": "Run Python",
                    "group": "navigation",
                    "when": "resourceLangId == python && config.pyrun.enableRunMenu"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.runPython",
                    "group": "navigation",
                    "title": "Run Python",
                    "when": "resourceLangId == python && config.pyrun.enableContextMenu"
                }
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jianduo1/pyrun"
    }
}